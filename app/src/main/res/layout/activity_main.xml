<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/grantUriPermissionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="grant URI permission" />

                <Button
                    android:id="@+id/revokeUriPermissionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="revoke URI permission" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="add (intern)" />

                <Button
                    android:id="@+id/addSdCardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="add (SD card)" />

                <Button
                    android:id="@+id/refreshButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="refresh" />
            </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons"
        android:background="#aaaaaa" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons"
        android:text="There is no data"
        android:textStyle="bold" />

</RelativeLayout>